{
  "name": "code-commenter",
  "version": "1.0.0",
  "description": "A CLI tool that scans JavaScript files and suggests simple, beginner-friendly comments for functions and code blocks",
  "main": "src/index.js",
  "bin": {
    "code-commenter": "./bin/code-commenter.js"
  },
  "scripts": {
    "start": "node bin/code-commenter.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "keywords": [
    "javascript",
    "comments",
    "documentation",
    "cli",
    "automation",
    "code-quality"
  ],
  "author": "Priyanshujindal",
  "license": "MIT",
  "type": "commonjs",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 60,
        "lines": 50,
        "statements": 45
      }
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Priyanshujindal/code-commenter.git"
  },
  "bugs": {
    "url": "https://github.com/Priyanshujindal/code-commenter/issues"
  },
  "homepage": "https://github.com/Priyanshujindal/code-commenter#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.34.1",
    "acorn": "^8.11.3",
    "acorn-walk": "^8.3.0",
    "chalk": "^4.1.2",
    "colors": "^1.4.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.3.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4"
  }
}
